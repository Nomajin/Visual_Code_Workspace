let dia = 3;
let nombreDia;

switch (key) {
    case 1:
        nombreDia: 'Lunes'
        break;

    case 2:
        nombreDia: 'Martes'
        break;

    case 3:
        nombreDia: 'Miercoles'
        break;

    case 4:
        nombreDia: 'Jueves'
        break;

    case 5:
        nombreDia: 'Viernes'
        break;

    case 6:
        nombreDia: 'Sabado'
        break;

    case 7:
        nombreDia: 'Domingo'
        break;    
}